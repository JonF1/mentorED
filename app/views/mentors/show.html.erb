<head>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
    $(function () {
      students = JSON.parse('<%= {emails: @students.map { |student| student.email } }.to_json.html_safe %>')
      $("#add_student").autocomplete({source: students.emails});
    });
  </script>
</head>
<body>
  <p>Welcome,<%= @mentor.first_name %></p>

  <%= link_to "Forum", simple_discussion_path %>
  <p> <%= link_to 'Chat', conversations_path %> </p>

  <% @conversations.each do |conversation| %>
      <%= link_to conversation.recipient(current_user).email, conversation_messages_path(conversation) %>
      <% if !conversation.unread_message_count(current_user).zero? %>
        (<%= conversation.unread_message_count(current_user) %>)
      <% end %>
      <br>
  <% end %>

  <div class="ui widget">
    <%= form_with model: @mentor, method: "put", local: true do |f| %>
      <%= f.text_field :student_email, id: "add_student" %>
      <%= f.submit "Add Student" %>
    <% end %>
  </div>

  <h3>Students you are connected with</h3>


  
  <div class="row mx-auto">
  <% @mentor.students.each do |student|%>
    <div class="col-sm-4">
      <div class="card">
      <img class="card-img-top" src=".../100px180/?text=Image cap" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"> <%= student.first_name + " "+ student.last_name %> </h5>
          <p class="card-text"> <%= student.email %> </p>
          <a href="#" class="btn btn-primary">Message</a>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <%= link_to 'Log out', destroy_mentor_session_path, :method => :delete %>
</body>


