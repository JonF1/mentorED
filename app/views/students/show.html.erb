
<%= stylesheet_link_tag    'student', media: 'all' %>

<h3 style="text-align: center; padding-bottom: 20px"> Your Mentor</h3>

<!-- <div class="row mx-auto"> -->
<% if @student.mentor != nil %>
  <div class="row mx-auto">
    <div class="card mx-auto" style="text-align: center; width: 20rem; height: 13">
    <div style="text-align: center; padding-top: 10px"><%= image_tag("mentorED_emblem.png", alt: "Card logo", width: "75", height: "75") %></div>
      <div class="card-body">
        <h5 class="card-title"> <%= @student.mentor.first_name + " "+ @student.mentor.last_name %> </h5>
        <p class="card-text"> <%= @student.mentor.email %> </p>
        <%= button_to "Message", conversations_path(sender_id: current_user.id, receiver_id: @student.mentor.id)%>
      </div>
    </div>
  </div>
  <!-- </div> -->
<% end %>
